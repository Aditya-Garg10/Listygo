pipeline {
  agent any

  stages {
    stage('Checkout adi-be') {
      steps {
        // Clone the adi-be branch
        git branch: 'adi-be',
            url:   'https://github.com/Aditya-Garg10/Listygo.git'
      }
    }

    stage('Build & Deploy') {
      steps {
        dir('Listygo') {
          sh '''
            # 1) Tear down anything using port 8000
            for c in $(docker ps --filter "publish=8000" --format "{{.ID}}"); do
              docker stop $c || true
              docker rm   $c || true
            done

            # 2) Also remove any old home-backend-1
            docker stop home-backend-1 || true
            docker rm   home-backend-1 || true

            # 3) Build new image without cache
            docker build --no-cache -t home-backend .

            # 4) Run the fresh container
            docker run -d \
              --name home-backend-1 \
              -p 8000:3000 \
              home-backend
          '''
        }
      }
    }
  }

  post {
    success {
      echo '✅ Deployment complete—your updated code is now live!'
    }
    failure {
      echo '❌ Deployment failed. Check the logs above.'
    }
  }
}
