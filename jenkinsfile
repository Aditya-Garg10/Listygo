pipeline {
  agent any

  options {
    // Disable the built-in first checkout so we don’t pull main by mistake
    skipDefaultCheckout()
  }

  stages {
    stage('Checkout adi-be into Listygo/') {
      steps {
        // Clone only the adi-be branch into the "Listygo" subfolder
        dir('Listygo') {
          git branch: 'adi-be',
              url:   'https://github.com/Aditya-Garg10/Listygo.git'
        }
      }
    }

    stage('Build Docker Image') {
      steps {
        // Build using the Dockerfile at Listygo/Dockerfile
        dir('Listygo') {
          sh 'docker build -t home-backend .'
        }
      }
    }

    stage('Redeploy') {
      steps {
        sh '''
          docker stop home-backend-1 || true
          docker rm   home-backend-1 || true
          docker run -d \
            --name home-backend-1 \
            -p 8000:3000 \
            home-backend
        '''
      }
    }
  }

  post {
    success {
      echo '✅ Deployment complete!'
    }
    failure {
      echo '❌ Something went wrong. Check the console output above.'
    }
  }
}
