pipeline {
  agent any

  options {
    // Don’t inherit any previous checkouts—start fresh
    skipDefaultCheckout()
  }

  stages {
    stage('Clean workspace') {
      steps {
        // Deletes everything in the current workspace
        deleteDir()
      }
    }

    stage('Checkout adi-be') {
      steps {
        // Clone exactly the state of adi-be
        git branch: 'adi-be',
            url:   'https://github.com/Aditya-Garg10/Listygo.git'
      }
    }

    stage('Verify code') {
      steps {
        dir('Listygo') {
          // Show us your index.js so we know Jenkins sees the update
          sh '''
            echo "---- index.js start ----"
            head -n 20 index.js || true
            echo "---- index.js end ----"
          '''
        }
      }
    }

    stage('Build & Deploy') {
      steps {
        dir('Listygo') {
          sh '''
            # 1) Tear down anything using port 8000
            for c in $(docker ps --filter "publish=8000" --format "{{.ID}}"); do
              docker stop $c || true
              docker rm   $c || true
            done

            # 2) Remove old home-backend-1 if present
            docker stop home-backend-1 || true
            docker rm   home-backend-1 || true

            # 3) Build fresh image
            docker build --no-cache -t home-backend .

            # 4) Run the new container
            docker run -d \
              --name home-backend-1 \
              -p 8000:3000 \
              home-backend
          '''
        }
      }
    }
  }

  post {
    success {
      echo '✅ Deployment complete—new code is live!'
    }
    failure {
      echo '❌ Deployment failed. See errors above.'
    }
  }
}
